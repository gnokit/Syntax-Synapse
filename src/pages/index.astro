---
import BaseLayout from "@/layouts/BaseLayout.astro";
import BlogEntries from "@/components/entries/BlogEntry.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
// Sort posts by date in descending order (newest first)
const sortedPosts = allPosts.sort(
  (a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate)
);
---

<BaseLayout>
  <section>
    <div class="py-24">
      <div class="max-w-3xl">
        <h1
          class="text-4xl md:text-5xl text-balance font-bold font-display text-base-900 mb-6"
        >
          Welcome to Syntax & Synapse
        </h1>
        <p class="text-xl text-base-600 mb-8 leading-relaxed">
          Exploring the intersection of AI and software development through practical tutorials, cutting-edge insights, and real-world applications.
        </p>
      </div>
      
      <div class="flex flex-wrap gap-3 mt-8 mb-12">
        {
          tags.map((tag) => (
            <a
              class="px-3 py-1 text-sm font-medium text-base-600 bg-base-100 rounded-full hover:bg-accent-100 hover:text-accent-700 transition-colors"
              href={`/tags/${tag}`}
            >
              {tag}
            </a>
          ))
        }
      </div>
      
      <div class="grid grid-cols-1 mt-4 gap-8 gap-y-24 sm:grid-cols-2">
        {
          sortedPosts.map((post) => (
            <BlogEntries
              url={"/posts/" + post.slug}
              alt={post.data.title}
              tags={post.data.tags}
              title={post.data.title}
              author={post.data.author}
              image={post.data.image.url}
              description={post.data.description}
              pubDate={new Date(post.data.pubDate).toISOString().slice(0, 10)}
            />
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>
